# Environment Configuration for Mobile App
# Copy this file to .env and modify the values as needed

# Environment mode (development/production)
NODE_ENV=development

# API Configuration
# Base URL for HTTP requests
API_BASE_URL_DEV=http://localhost:8000
API_BASE_URL_PROD=https://fokin.fun

# WebSocket Configuration
# Base URL for WebSocket connections
WS_BASE_URL_DEV=ws://127.0.0.1:8000
WS_BASE_URL_PROD=wss://fokin.fun

# Additional Configuration Options
# Enable/disable debug logging
DEBUG_MODE=true

# API timeout settings (in milliseconds)
API_TIMEOUT=10000

# Image sharing settings
# Maximum image size in MB before compression
MAX_IMAGE_SIZE_MB=5
# Image quality for compression (0.1 to 1.0)
IMAGE_COMPRESSION_QUALITY=0.7
# Maximum image width/height in pixels
MAX_IMAGE_DIMENSION=1024

# WebSocket reconnection settings
WS_RECONNECT_INTERVAL=3000
WS_MAX_RECONNECT_ATTEMPTS=5