{
  "expo": {
    "name": "Fokin",
    "slug": "fokinfun",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#222222"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.k2foxspb.fokinfun",
      "infoPlist": {
        "NSCameraUsageDescription": "Приложение использует камеру для создания фотографий",
        "NSPhotoLibraryUsageDescription": "Приложение использует галерею для выбора фотографий",
        "NSMicrophoneUsageDescription": "Приложение использует микрофон для записи аудио"
      }
    },
    "android": {
      "package": "com.k2foxspb.fokinfun",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#222222"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Приложение использует галерею для выбора фотографий",
          "cameraPermission": "Приложение использует камеру для создания фотографий"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#222222",
          "defaultChannel": "default"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7a408a11-ebbd-48ac-8f31-e0eb0f1bf1d7"
      }
    },
    "owner": "k2foxspb"
  }
}