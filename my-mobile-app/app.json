{
  "expo": {
    "name": "FokinFun",
    "slug": "fokinfun",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "fokinfun",
    "icon": "./assets/images/logo1024.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#222222"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.k2foxspb.fokinfun",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "Приложение использует камеру для создания фотографий",
        "NSPhotoLibraryUsageDescription": "Приложение использует галерею для выбора фотографий",
        "NSMicrophoneUsageDescription": "Приложение использует микрофон для записи аудио",
        "UIBackgroundModes": [
          "remote-notification",
          "background-fetch",
          "background-processing"
        ],
        "FirebaseAppDelegateProxyEnabled": true,
        "FirebaseMessagingAutoInitEnabled": true
      }
    },
    "android": {
      "package": "com.k2foxspb.fokinfun",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo1024.png",
        "backgroundColor": "#222222"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.USE_FULL_SCREEN_INTENT",
        "com.google.android.c2dm.permission.RECEIVE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "fokin.fun"
            },
            {
              "scheme": "fokinfun"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Приложение использует галерею для выбора фотографий",
          "cameraPermission": "Приложение использует камеру для создания фотографий"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/logo1024.png",
          "color": "#222222"
        }
      ],
      [
        "@react-native-firebase/app",
        {
          "android_background_activity_names": [
            "com.k2foxspb.fokinfun.MainActivity"
          ]
        }
      ],
      [
        "@react-native-firebase/messaging",
        {
          "android": {
            "default_notification_channel_id": "default",
            "default_notification_color": "#222222",
            "notification_foreground_service": {
              "enabled": true
            },
            "requestPermissionsOnAndroid": true,
            "notification_android_priority": "high",
            "notification_android_visibility": "public"
          },
          "ios": {
            "useProvisionalNotifications": false,
            "requestPermissionsOnInit": true
          },
          "backgroundMessageHandler": "./firebaseBackgroundHandler.js"
        }
      ]
    ],
    "notification": {
      "icon": "./assets/images/logo1024.png",
      "color": "#222222",
      "androidMode": "default",
      "androidCollapsedTitle": "Новые сообщения",
      "iosDisplayInForeground": true
    },
    "extra": {
      "eas": {
        "projectId": "7a408a11-ebbd-48ac-8f31-e0eb0f1bf1d7"
      }
    },
    "owner": "k2foxspb"
  }
}