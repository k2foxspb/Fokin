{
  "expo": {
    "name": "Fokin",
    "slug": "fokinfun",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "fokinfun",
    "icon": "./assets/images/logo1024.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/logo1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#222222"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.k2foxspb.fokinfun",
      "infoPlist": {
        "NSCameraUsageDescription": "Приложение использует камеру для создания фотографий",
        "NSPhotoLibraryUsageDescription": "Приложение использует галерею для выбора фотографий",
        "NSMicrophoneUsageDescription": "Приложение использует микрофон для записи аудио"
      }
    },
    "android": {
      "package": "com.k2foxspb.fokinfun",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo1024.png",
        "backgroundColor": "#222222"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.USE_FULL_SCREEN_INTENT"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "fokin.fun"
            },
            {
              "scheme": "fokinfun"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Приложение использует галерею для выбора фотографий",
          "cameraPermission": "Приложение использует камеру для создания фотографий"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/logo1024.png",
          "color": "#222222",
          "defaultChannel": "messages",
          "androidMode": "default",
          "androidCollapsedTitle": "Новые сообщения",
        }
      ]
    ],
    "notification": {
      "icon": "./assets/images/logo1024.png",
      "color": "#222222",
      "androidMode": "default",
      "androidCollapsedTitle": "Новые сообщения",
      "iosDisplayInForeground": true
    },
    "extra": {
      "eas": {
        "projectId": "7a408a11-ebbd-48ac-8f31-e0eb0f1bf1d7"
      }
    },
    "owner": "k2foxspb"
  }
}